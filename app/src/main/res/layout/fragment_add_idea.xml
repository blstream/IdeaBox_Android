<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="userIdea"
            type="intive.ideabox.model.IdeaData" />

        <variable
            name="ideaViewModel"
            type="intive.ideabox.viewmodel.AddIdeaViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="intive.ideabox.activity.MainActivity">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/idea_greetings_text"
            android:maxLength="256"
            android:maxLines="6"
            android:text="@={userIdea.ideaText}" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical|end"
            android:layout_margin="20sp"
            android:onClick="@{()->ideaViewModel.saveIdea(userIdea.getIdeaText())}"
            android:src="@android:drawable/ic_input_add"
            android:tint="@color/colorAccent"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal" />

    </FrameLayout>
</layout>